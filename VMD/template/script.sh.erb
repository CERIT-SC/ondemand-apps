#!/bin/bash

CONN_F=$PWD/connection.yml

while ! [ -f $CONN_F ]; do sleep 1; done

PORT=$(boltdb-dump "/host/${SCRATCHDIR}/libpod/bolt_state.db" | grep -o "hostPort..[0-9]*,.containerPort..2000" | sed 's/hostPort..\([0-9]*\),.containerPort..\([0-9]*\)/\1/')
PWD=`pwd`
LINE="$(grep -n "websocket:" $CONN_F | head -n 1 | cut -d: -f1)"
sed -i "${LINE}s/.*/websocket: $PORT/" $CONN_F

# Clean the environment
module purge

#Set working directory to home directory
cd "${HOME}"

/usr/bin/Xorg &

#
# Launch Xfce Window Manager and Panel
#

(
  export SEND_256_COLORS_TO_REMOTE=1
  export XDG_CONFIG_HOME="<%= session.staged_root.join("config") %>"
  export XDG_DATA_HOME="<%= session.staged_root.join("share") %>"
  export XDG_CACHE_HOME="$(mktemp -d)"
  xfwm4 --compositor=off --daemon --sm-client-disable
  xsetroot -solid "#D3D3D3"
  xsettingsd --sm-client-disable
  xfce4-panel --sm-client-disable
) &

#
# Start VMD
#
module add vmd-1.9.3
export PATH=/cvmfs/software.metacentrum.cz/software/virtualgl/2.6.3/bin/:$PATH

# Output debug info
module list

# Launch VMD
set -x
xfce4-terminal -e "vglrun vmd" -T "VMD Terminal" --disable-server
